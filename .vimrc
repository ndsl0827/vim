set nu
set wrap
set showcmd
set nocompatible
set showmatch
set ignorecase
set smartcase
set showmatch
set incsearch
set ruler
set cursorline
set autochdir
set cindent
set autoindent
set expandtab
set guifont=Menlo:h10
set scrolloff=5
set laststatus=2
set tabstop=4
set shiftwidth=4
set softtabstop=4

colorscheme desert

"support gb2312
set fileencodings=utf-8,gb2312,gb18030,gbk,ucs-bom,cp936,latin1
set enc=utf8
set fencs=utf8,gbk,gb2312,gb18030
